{
    "actions": [
        {
            "type": "Start",
            "schema_path": "./supergraph.graphql",
            "configuration_path": "./configuration.yaml",
            "subgraphs": {
                "accounts": {
                    "requests": [
                        {
                            "request": {"query":"{me{name}}"},
                            "response": {"data": { "me": { "name": "test" } } }
                        },
                        {
                            "request": {"query":"{me{nom:name}}"},
                            "response": {"data": { "me": { "nom": "test" } } }
                        }
                    ]
                }
            }
        },
        {
            "type": "Request",
            "request": {
                "query": "{ me { name } }"
            },
            "expected_response": {
                "data":{
                    "me":{
                        "name":"test"
                    }
                }
            }
        },
        {
            "type": "ReloadSchema",
            "schema_path": "./supergraph.graphql"
        },
        {
            "type": "Request",
            "request": {
                "query": "{ me { nom: name } }"
            },
            "expected_response": {}
        },
        {
            "type": "Stop"
        }
    ]
}
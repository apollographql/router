{
    "actions": [
        {
            "type": "Start",
            "schema_path": "./supergraph.graphql",
            "configuration_path": "./configuration.yaml",
            "subgraphs": {
                "accounts": {
                    "snapshot_path": "./http_snapshots.json",
                    "requests": []
                }
            }
        },
        {
            "type": "Request",
            "request": {
                "query": "{ me { name } }"
            },
            "expected_response": {
                "data":{
                    "me":{
                        "name":"test"
                    }
                }
            }
        },
        {
            "type": "Request",
            "request": {
                "query": "{ me { nom: name } }"
            },
            "expected_response": {
                "data": {
                    "me": {
                        "nom": "test"
                    }
                }
            }
        },
        {
            "type": "Stop"
        }
    ]
}